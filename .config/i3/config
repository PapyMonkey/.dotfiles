set $mod			Mod1
set $ctrl			Control
set $term			alacritty
set $refresh_status	killall -SIGUSR1 i3status

# Gaps
set $inner_gaps		15
set $outer_gaps		12

# Workspaces
set $ws1			"0: Fun"
set $ws2			"1: Work"
set $ws3			"2: Terminal"
set $ws4			"3: Misc"
set $ws5			"4: Social"
set $ws6			"5"
set $ws7			"6"
set $ws8			"7"
set $ws9			"8: Tools"
set $ws10			"9: Music"

# Volume
set $volume_up		--no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
set $volume_down	--no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
set $volume_mute	--no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
set $mic_mute		--no-startup-id pactl set-source-mute @DEFAULT_SOURCE@\
					toggle

# Brightness
set $bright_up		/usr/bin/xbacklight -inc 10
set $bright_down	/usr/bin/xbacklight -dec 5

# i3lock setup
set $Locker			i3lock\
					--ignore-empty-password\
					--show-failed-attempts\
					-c 000000\
					-i $HOME/.config/i3/data/weigth.png\
					&& sleep 1

