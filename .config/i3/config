# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Hack Nerd 10

# remap CapsLock to Esc
exec_always --no-startup-id xmodmap -e "clear lock"
exec_always --no-startup-id xmodmap -e "keycode 66 = Escape NoSymbol Escape"

# Gaps
# smart_gaps on
# gaps inner $inner_gaps
# gaps outer $outer_gaps

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Border management
hide_edge_borders smart

# Pop-up management
popup_during_fullscreen smart
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

# Automatic back-and-forth when switching to the current workspace
workspace_auto_back_and_forth no

# Background setup
exec --no-startup-id nitrogen --set-auto $HOME/.config/i3/data/weigth.png --head=0
# exec --no-startup-id nitrogen --set-centered $HOME/.config/i3/data/weigth.png --head=-1

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- $Locker --nofork
# auto lock the screen
exec --no-startup-id "xautolock -detectsleep -time 3 -locker $Locker"

# enable tap-to-click on touchpad
exec xinput set-prop "VEN_0488:00 0488:1024 Touchpad" "libinput Tapping Enabled" 1 # Dell laptop

# Assign programs to workspaces
for_window	[class="^Brave-browser$" title="^Fun$"]	move to workspace	$ws1
for_window	[class="^Brave-browser$" title="^Work$"] move to workspace	$ws2
for_window	[class="^Brave-browser$" title="^Slack$"] move to workspace	$ws5
