# Aliases
# -> To be sourced in .zshrc

# ls
alias ls="ls -p -G --color=auto"
alias la="ls -h -v -l -A --color=auto"
alias ll="ls -h -l --color=auto"
alias lla="ls -h -v -all --color=auto"
alias lt="exa -T"
# alias cd="z"

# cat
alias cat="batcat -p"
alias catt="batcat"

# Git
alias g=git
alias dot='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'       

# Vim
alias vi=nvim
alias vim=nvim

# tmux
unalias ta
