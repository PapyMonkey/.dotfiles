# Aliases
# -> To be sourced in .zshrc

# cd
alias ..="cd .."
alias ...="cd ../.."
alias .3="cd ../../.."
alias .4="cd ../../../.."
alias .5="cd ../../../../.."

# ls
alias ls="ls -p -G --color=auto"
alias la="ls -h -v -l -A --color=auto"
alias ll="ls -h -l --color=auto"
alias lla="ls -h -v -all --color=auto"
alias lt="exa -T"
# alias cd="z"

# grep
alias grep="grep --color=auto"

# cat
alias cat="batcat -p"
alias catt="batcat"

# Git
alias g=git

# Bare git repo aliases for dotfiles management
alias dot="git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME"       

# Vim
alias vi=nvim
alias vim=nvim

# tmux
unalias ta

# adding flags
alias cp="cp -i"			# confirm before overwritting something
alias mv="mv -i"			# confirm before overwritting something
alias rm="rm -i"			# confirm before overwritting something
alias df="df -h"			# human-readable sizes

# Pomodoro
declare -A pomo_options
pomo_options["work"]="45"
pomo_options["break"]="10"
pomodoro () {
  if [ -n "$1" -a -n "${pomo_options["$1"]}" ]; then
  val=$1
  echo $val | lolcat
  timer ${pomo_options["$val"]}m
  spd-say "'$val' session done"
  fi
}
alias wo="pomodoro 'work'"
alias br="pomodoro 'break'"
