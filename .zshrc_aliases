# Aliases
# -> to be sourced in .zshrc

# ls
alias ls="ls -p -G --color=auto"
alias la="ls -h -l -A --color=auto"
alias ll="ls -h -l --color=auto"
alias lla="ls -h -all --color=auto"
alias lt="exa -T"
# alias cd="z"

# cat
alias cat="batcat -p"
alias catt="batcat"

# Git
alias g=git

# Vim
alias vi=nvim
alias vim=nvim
